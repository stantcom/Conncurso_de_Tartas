<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Conncurso_de_Tartas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Titles_Textview_Style">// Creamos themes los estilos de los titulos
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="elevation">16dp</item>
    </style>

    <style name="Titles_Input_Edit_Text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">center</item>


    </style>

</resources>